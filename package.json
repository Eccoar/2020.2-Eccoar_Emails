{
	"name": "2020.2-eccoar_mailer",
	"version": "1.0.0",
	"description": "Email Service",
	"devDependencies": {
		"@types/bull": "^3.15.0",
		"@types/cors": "^2.8.10",
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.11",
		"@types/jest": "^26.0.20",
		"@types/morgan": "^1.9.2",
		"@types/node": "^8.0.29",
		"@types/nodemailer": "^6.4.1",
		"@types/redis": "^2.8.28",
		"@typescript-eslint/eslint-plugin": "^4.17.0",
		"@typescript-eslint/parser": "^4.17.0",
		"eslint": "^7.22.0",
		"eslint-config-prettier": "^8.1.0",
		"husky": "^6.0.0",
		"jest": "^26.6.3",
		"jest-sonar-reporter": "^2.0.0",
		"lint-staged": "^10.5.4",
		"morgan": "^1.10.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.2.1",
		"ts-jest": "^26.5.3",
		"ts-node-dev": "^1.1.6",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.2.3"
	},
	"dependencies": {
		"@sendgrid/mail": "^7.4.2",
		"@sentry/node": "^6.2.5",
		"@sentry/tracing": "^6.2.5",
		"bull": "^3.21.0",
		"class-validator": "^0.13.1",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"nodemailer": "^6.5.0"
	},
	"scripts": {
		"start": "tsnd -r tsconfig-paths/register --transpile-only --respawn --ignore-watch node_modules src/server.ts",
		"build": "node ./build/server.js --env=production",
		"lint-report": "eslint . --ext .ts --output-file ./lint-report.html --format html",
		"test": "jest --forceExit",
		"lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
		"check-types": "tsc",
		"prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
		"format": "npm run prettier -- --write",
		"check-format": "npm run prettier -- --list-different",
		"validate": "npm-run-all --parallel check-types check-format lint",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.+(js|ts|tsx)": [
			"eslint"
		],
		"**/*.+(js|json|ts|tsx)": [
			"prettier --write",
			"git add"
		],
		"*.--write": "prettier --write",
		"*.{js,ts,tsx}": "eslint --cache --fix"
	}
}
